generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {
  id           Int      @id @default(autoincrement())
  exerciseName String   @db.VarChar(255)
  reps         Int
  sets         Int
  isWeighted   Boolean?
  isTimed      Boolean?
  day          Day      @relation(fields: [dayId], references: [id])
  dayId        Int
  // user       User    @relation(fields: [userId], references: [id])
  // userId     Int
}

